<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.divyansh.myapplication.CreateScreen">


    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50px">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/GroupName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Group Name"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px" />

            </android.support.design.widget.TextInputLayout>

            <Spinner

                android:id="@+id/Subject"
                android:textSize="100px"
                android:spinnerMode="dropdown"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:layout_marginTop="30px"
                android:fadeScrollbars="false"
                android:focusable="true" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/Topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Topic Details"
                    android:maxLines="10"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/LocationDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Location Details"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px" />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/CapacityDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_marginBottom="5px"
                android:textSize="15dp"/>

            <SeekBar
                android:layout_marginTop="5px"
                android:layout_marginBottom="30px"
                android:id="@+id/Capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"/>

           <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Start Date"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Start Time"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select End Date"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select End Time"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="30px"
                    />

            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/create"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="CREATE GROUP"
                android:textStyle="bold"
                android:layout_marginBottom="20px" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
